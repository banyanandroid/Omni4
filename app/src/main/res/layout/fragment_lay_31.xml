<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="center"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/one_frag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/img31" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dip"
                android:layout_marginBottom="10dp"
                android:background="@color/red" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@color/yellow"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.08"
                        android:gravity="end"
                        android:text="31"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <!--
                                        <ImageView
                                            android:layout_width="350dp"
                                            android:layout_height="60dp"
                                            android:id="@+id/left_frag2"
                                            android:layout_above="@+id/textno"
                                            android:layout_alignLeft="@+id/textno"
                                            android:layout_alignStart="@+id/textno"
                                            android:src="@drawable/left_2" />-->

                    <!-- <ImageView
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:id="@+id/prev"
                         android:src="@drawable/prev"
                         android:layout_alignTop="@+id/next"
                         android:layout_toRightOf="@+id/textno"
                         android:layout_toEndOf="@+id/textno" />-->

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_above="@+id/textno"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/next" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Unresolved"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:id="@+id/textView61"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="chronic inflammation"
                        android:id="@+id/textView62"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_below="@+id/textView61"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</FrameLayout>