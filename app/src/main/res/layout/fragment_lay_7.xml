<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Fragment_Video">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/back_1"></include>


        <TextView
            android:id="@+id/head_frag7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linear_frag7"
            android:layout_alignLeft="@+id/linear_frag7"
            android:layout_alignRight="@+id/linear_frag7"
            android:layout_alignStart="@+id/linear_frag7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Induce cell cycle arrest and apoptosis"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/linear_frag7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/head_frag7"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/inside_head_frag7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_img_frag7"
                android:gravity="center"
                android:text=" The cell division cycle and its control"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tab_img_frag7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="matrix"
                android:src="@drawable/seven_img" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textno"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="135dp"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:clickable="true"
            android:rotation="180"
            android:src="@drawable/arw" />

        <TextView
            android:id="@+id/textno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/back"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />


    </RelativeLayout>
</FrameLayout>