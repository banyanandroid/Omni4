<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Fragment_Video">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="200dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/head1_frag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unresolved"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/red"
                    android:textSize="55sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/head2_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="chronic inflammation"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <!--<View
                android:layout_width="fill_parent"
                android:layout_height="5dip"
                android:layout_marginBottom="10dp"
                android:background="@color/red" />-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.03"
                    android:gravity="end"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/responce_frag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="60dp"
                    android:layout_weight="0.70"
                    android:gravity="center"
                    android:text="Responsible for Cancer occurrence and recurrence"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/next" />


            </LinearLayout>
        </LinearLayout>


        <!--<ImageView
            android:id="@+id/one_frag1"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:src="@drawable/ba"
            android:layout_marginRight="-30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="260dp"
            android:src="@drawable/ba"
            android:layout_toRightOf="@+id/one_frag1"
            android:id="@+id/two_frag1"
            android:layout_alignTop="@+id/one_frag1" />-->

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="500dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/damino"
            android:drawableBottom="@color/red" />


    </RelativeLayout>
</FrameLayout>