<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Fragment_Video">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/omni_bg"
                android:layout_width="195dp"
                android:layout_height="320dp"
                android:background="@color/yellow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/on" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_above="@+id/on"
                android:layout_marginBottom="5dp"
                android:background="@color/red"
                android:id="@+id/view" />
            <View
                android:id="@+id/on"
                android:layout_width="fill_parent"
                android:layout_height="15dip"
                android:layout_alignParentBottom="true"
                android:background="@color/yellow" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginRight="15dp"
                android:id="@+id/ball_13"
                android:src="@drawable/brain_20"
                android:layout_below="@+id/chronic"
                android:layout_alignRight="@+id/unresolved"
                android:layout_alignEnd="@+id/unresolved" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Unresolved"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/unresolved"
                android:textSize="35sp"
                android:textColor="@color/red"
                android:textIsSelectable="false"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="chronic inflammation"
                android:id="@+id/chronic"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/unresolved"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/linear_frag9"
                android:layout_width="670dp"
                android:layout_height="330dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/tab_bg"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_above="@+id/view"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/chronic">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/img26"
                    android:src="@drawable/img26" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="In the management of MCI"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:id="@+id/head_frag9"
                android:textStyle="bold"
                android:layout_alignTop="@+id/unresolved"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/linear_frag9"
                android:layout_alignStart="@+id/linear_frag9"
                android:gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:src="@drawable/next"
                android:layout_alignBottom="@+id/linear_frag9"
                android:layout_toRightOf="@+id/linear_frag9"
                android:layout_toEndOf="@+id/linear_frag9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="(associated with Alzheimer)"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_toRightOf="@+id/chronic"
                android:layout_above="@+id/textView2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="15sp"
                android:text="Uncontrolled inflammation"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:background="@drawable/th_arr_bg"
                android:layout_alignRight="@+id/textView"
                android:layout_above="@+id/linear_frag9"
                android:layout_alignTop="@+id/ball_13"
                android:layout_toLeftOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="26"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/textno"
                android:layout_above="@+id/view"
                android:layout_alignLeft="@+id/chronic"
                android:layout_alignStart="@+id/chronic" />
        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>